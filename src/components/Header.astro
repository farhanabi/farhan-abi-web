---
import HeaderLink from './HeaderLink.astro';
---

<header class="fixed w-full mix-blend-difference z-50">
  <div
    class="flex flex-row max-w-screen-2xl mx-auto py-6 px-8 gap-x-8 items-center justify-between sm:px-16 sm:py-8 lg:justify-start"
  >
    <a href="/" class="flex-shrink-0 flex items-center">
      <img
        src="/images/logo.svg"
        alt="Farhan Abi logo"
        height={36}
        width={36}
      />
    </a>
    <nav class="flex gap-x-4 items-center">
      <HeaderLink href="/contact">Contact</HeaderLink>
    </nav>
  </div>
</header>
