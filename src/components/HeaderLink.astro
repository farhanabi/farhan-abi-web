---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props;
const isActive = href === Astro.url.pathname.replace(/\/$/, '');
---

<a
  href={href}
  class:list={[
    'inline-block text-white px-2 py-1 underline hover:decoration-2 hover:underline-offset-4',
    className,
    {
      'font-semibold bg-white text-black no-underline': isActive,
    },
  ]}
  {...props}
>
  <slot />
</a>
