---
import Metadata from '../components/Metadata.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  content: {
    title: string;
    description: string;
    image?: string;
    imageAlt?: string;
    publishedAt?: string;
    minutesRead?: string;
  };
}

const {
  content: { title, description, image, imageAlt, publishedAt, minutesRead },
} = Astro.props;
---

<html lang="en">
  <head>
    <Metadata
      title={`${title} | Muhammad Farhan Abiyyullah`}
      description={description}
      image={image}
    />
    <script defer src="https://www.googletagmanager.com/gtag/js?id=G-0P6H9VVVB1"
    ></script>
    <script defer>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-0P6H9VVVB1');
    </script>
  </head>

  <body class="bg-black">
    <Header />
    <article id="blog-content" class="flex justify-center">
      <div
        class="flex flex-col max-w-4xl pt-28 px-8 gap-y-8 sm:pt-36 sm:px-16 sm:gap-y-12"
      >
        <div>
          <h1 class="font-bold text-5xl">{title}</h1>
          <p class="mt-2">
            {
              [
                publishedAt ? `Published at ${publishedAt}` : '',
                minutesRead ? `${minutesRead}` : '',
              ].join(` â€¢ `)
            }
          </p>
        </div>
        {
          image && (
            <img
              class="self-center"
              width={720}
              height={360}
              src={image}
              alt={imageAlt ?? title}
            />
          )
        }
        <div class="text-lg space-y-8 sm:text-xl">
          <slot />
        </div>
      </div>
    </article>
    <Footer />
  </body>
</html>
