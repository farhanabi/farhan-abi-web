---
const posts = (await Astro.glob('/**/*.mdx')).sort((a, b) =>
  new Date(b.frontmatter.publishedAt) > new Date(a.frontmatter.publishedAt)
    ? 1
    : -1
);
---

<section id="mixtapes" class="bg-neutral-900 flex justify-center py-16">
  <div
    class="flex flex-col px-8 place-content-center items-start tracking-wide gap-y-8 text-white sm:px-0"
  >
    <h2 class="text-left text-4xl md:text-5xl">Mixtapes</h2>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <iframe
        width="100%"
        height="400"
        src="https://www.mixcloud.com/widget/iframe/?feed=%2Ffarhanabi%2Fnz-dance-mix%2F"
        frameborder="0"
        loading="lazy"
        title="NZ Dance Mix"></iframe>
    </div>
  </div>
</section>
