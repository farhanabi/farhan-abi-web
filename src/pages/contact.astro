---
import { Picture } from '@astrojs/image/components';
import Link from '../components/Link.astro';

import Layout from '../layouts/main.astro';
---

<Layout
  title="Contact Me | Muhammad Farhan Abiyyullah"
  description="If you're looking for Muhammad Farhan Abiyyullah's contact information, you've come to the right place! This page has everything you need to know about how to get in touch with him."
>
  <div class="pt-16 px-8 relative">
    <div class="absolute inset-0">
      <div class="absolute inset-y-0 left-0 w-1/2"></div>
    </div>
    <div class="relative max-w-7xl mx-auto lg:grid lg:grid-cols-6">
      <div class="pt-16 px-4 sm:px-6 lg:col-span-3 lg:px-8 lg:py-24 xl:pr-12">
        <div class="max-w-lg mx-auto">
          <h1 class="text-5xl font-bold">Get in touch</h1>
          <p class="mt-5 text-xl">
            Thank you for trying to contact me because no one ever tries. Get in
            touch with me using these channels if you want to hear more about my
            exciting life.
          </p>
          <dl class="mt-10 text-xl">
            <div class="mt-4">
              <dt class="sr-only">Email</dt>
              <dd class="flex items-center">
                <svg
                  class="flex-shrink-0 h-6 w-6"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
                <Link href="mailto:hello@farhanabi.com" class="ml-3"
                  >hello@farhanabi.com
                </Link>
              </dd>
            </div>
            <div class="mt-4">
              <dt class="sr-only">Email</dt>
              <dd class="flex items-center">
                <svg
                  class="h-6 w-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                    clip-rule="evenodd"></path>
                </svg>
                <Link href="https://linkedin.com/in/farhanabi/" class="ml-3"
                  >linkedin.com/in/farhanabi
                </Link>
              </dd>
            </div>
            <div class="mt-4">
              <dt class="sr-only">Github</dt>
              <dd class="flex items-center">
                <svg
                  class="w-6 h-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"
                    clip-rule="evenodd"></path>
                </svg>
                <Link href="https://github.com/farhanabi/" class="ml-3"
                  >github.com/farhanabi
                </Link>
              </dd>
            </div>
          </dl>
          <h2 class="mt-10 text-2xl">
            Looking for my professional experiences?
          </h2>
          <Link
            class="mt-2 text-xl"
            href="/Muhammad_Farhan_Abiyyullah_Resume.pdf"
          >
            View my job resume.
          </Link>
        </div>
      </div>
      <Picture
        src="/images/astronaut-on-phone.webp"
        alt="An astronaut is on phone"
        widths={[384, 682, 1400]}
        sizes="(max-width: 800px) 100vw, 800px"
        aspectRatio={1}
        loading="eager"
        class="self-end lg:col-span-3"
      />
    </div>
  </div>
</Layout>
